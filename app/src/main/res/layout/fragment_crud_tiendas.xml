<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tiendas"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#3E2723"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- INPUT: Nombre -->
    <EditText
        android:id="@+id/etNombre"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Nombre"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp" />

    <!-- INPUT: Dirección -->
    <EditText
        android:id="@+id/etDireccion"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Dirección"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp" />

    <!-- INPUT: Horario -->
    <EditText
        android:id="@+id/etHorario"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Horario"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etDireccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp" />

    <!-- INPUT: Estado -->
    <EditText
        android:id="@+id/etEstado"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Estado"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etHorario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp" />

    <!-- BOTÓN Seleccionar Ubicación -->
    <Button
        android:id="@+id/btnSeleccionarUbicacion"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Seleccionar Ubicación"
        android:background="@drawable/btn_primary"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/etEstado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp" />

    <!-- CONTENEDOR DE BOTONES -->
    <LinearLayout
        android:id="@+id/llBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/btnSeleccionarUbicacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp">

        <!-- Fila 1: Crear – Modificar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnCrear"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Crear"
                android:layout_weight="1"
                android:background="@drawable/btn_primary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnModificar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Modificar"
                android:layout_weight="1"
                android:background="@drawable/btn_primary"
                android:textColor="@android:color/white"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- Fila 2: Eliminar – Volver -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Eliminar"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnVolver"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Volver"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary"
                android:textColor="@android:color/white"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Buscar -->
    <LinearLayout
        android:id="@+id/llBuscar"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/llBotones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etBuscar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Buscar"
            android:background="@drawable/input_bg"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Buscar"
            android:background="@drawable/btn_primary"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTiendas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/llBuscar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
