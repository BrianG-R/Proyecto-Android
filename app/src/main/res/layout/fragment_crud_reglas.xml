<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloReglas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reglas"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#3E2723"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- INPUT: Nombre -->
    <EditText
        android:id="@+id/etNombreRegla"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Nombre"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        android:textColor="#3E2723"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloReglas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- INPUT: Descripción -->
    <EditText
        android:id="@+id/etDescripcionRegla"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Descripción"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        android:textColor="#3E2723"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/etNombreRegla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- INPUT: Otros -->
    <EditText
        android:id="@+id/etOtrosRegla"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Otros"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        android:textColor="#3E2723"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/etDescripcionRegla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOTONES -->
    <LinearLayout
        android:id="@+id/layoutBotonesReglas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etOtrosRegla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Agregar / Eliminar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btnAgregarRegla"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Agregar"
                android:layout_weight="1"
                android:background="@drawable/btn_primary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnEliminarRegla"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Eliminar"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary"
                android:textColor="@android:color/white"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- Modificar / Volver -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnModificarRegla"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Modificar"
                android:layout_weight="1"
                android:background="@drawable/btn_primary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnVolverRegla"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Volver"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary"
                android:textColor="@android:color/white"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- BUSCAR -->
    <LinearLayout
        android:id="@+id/layoutBuscarReglas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/layoutBotonesReglas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etBuscarRegla"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Buscar"
            android:background="@drawable/input_bg"
            android:padding="12dp"
            android:textColor="#3E2723"/>

        <Button
            android:id="@+id/btnBuscarRegla"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Buscar"
            android:background="@drawable/btn_primary"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- LISTA -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerReglas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/layoutBuscarReglas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
