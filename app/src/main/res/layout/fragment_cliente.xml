<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clientes"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#0D47A1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- INPUT: UID -->
    <EditText
        android:id="@+id/etUid"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="UID"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="12dp" />

    <!-- INPUT: Nombre -->
    <EditText
        android:id="@+id/etNombre"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Nombre"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etUid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp" />

    <!-- INPUT: Teléfono -->
    <EditText
        android:id="@+id/etTelefono"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Teléfono"
        android:inputType="phone"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp" />

    <!-- INPUT: Fecha Nacimiento -->
    <EditText
        android:id="@+id/etFechaNacimiento"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Fecha de Nacimiento"
        android:inputType="date"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etTelefono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp" />

    <!-- INPUT: Estado -->
    <EditText
        android:id="@+id/etEstado"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Estado"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etFechaNacimiento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp" />

    <!-- INPUT: Foto -->
    <EditText
        android:id="@+id/etFoto"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="URL Foto"
        android:background="@drawable/input_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etEstado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp" />

    <!-- CONTENEDOR DE BOTONES -->
    <LinearLayout
        android:id="@+id/llBotonesCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/etFoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp">

        <!-- Fila 1: Crear – Modificar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnCrearCliente"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Crear"
                android:layout_weight="1"
                android:background="@drawable/btn_primary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnModificarCliente"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Modificar"
                android:layout_weight="1"
                android:background="@drawable/btn_primary"
                android:textColor="@android:color/white"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- Fila 2: Eliminar – Volver -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnEliminarCliente"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Eliminar"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnVolver"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Volver"
                android:layout_weight="1"
                android:background="@drawable/btn_secondary"
                android:textColor="@android:color/white"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Buscar -->
    <LinearLayout
        android:id="@+id/llBuscarCliente"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/llBotonesCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etBuscarCliente"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Buscar Cliente"
            android:background="@drawable/input_bg"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnBuscarCliente"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Buscar"
            android:background="@drawable/btn_primary"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerClientes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/llBuscarCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>